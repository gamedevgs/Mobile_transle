<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DD1616"/>
            <stroke android:color="#F3F3F3" android:width="1dp"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item>

        <shape android:shape="rectangle">
            <gradient android:startColor="#DD1616" android:endColor="#0F0E0E" android:angle="45"/>
            <solid android:color="#3F51B5"/>
            <stroke android:color="#F3F3F3" android:width="1dp"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
</selector>